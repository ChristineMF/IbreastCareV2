    </script>
    <script>
        Vue.createApp({
            data() {
                return {
                    BW: {

                        BWId: '',
                        BW1: 0,
                        BMI: "",
                        InpuDate: "",
                        UserId: '',
                        MeasureDate: "",

                    },
                    

                };
            },
            methods: {
                getdata: function () {

                    //把vue.js的this宣告在變數內,帶進去ajax方法內
                    //因為Ajax方法內,this會被改寫成別的物件
                    var self = this;
                    self.BW.UserId =@ViewBag.userid


                    //AJAX取得server的會員資料
                    $.ajax({
                        type: 'GET',
                        url: '/api/BWAPI/@ViewBag.userid',
                        dataType: 'json',
                        success: function (data) {
                            self.BW = data;
                        }
                    })
                },
            },
        }).mount("#app");
    </script>

}



